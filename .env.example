# Venue Newsletter Generator - Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# API KEYS
# ============================================================================

# Perplexity (for AI-powered web search with citations)
PERPLEXITY_API_KEY=your_perplexity_api_key_here

# OpenAI API (for content generation and analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Google AI / Gemini (for image generation)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Claude / Anthropic (optional - for content generation alternative)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Brave Search API (free tier: 2000 queries/month)
BRAVE_SEARCH_API_KEY=your_brave_search_api_key_here

# Ontraport (email campaign management)
ONTRAPORT_APP_ID=your_ontraport_app_id_here
ONTRAPORT_API_KEY=your_ontraport_api_key_here

# SMTP Email Settings (optional - for test email sending)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Custom GPT Links (paste your shared GPT links here)
CUSTOM_GPT_NEWS_SEARCH=
CUSTOM_GPT_TIP_GENERATION=
CUSTOM_GPT_TREND_ANALYSIS=
CUSTOM_GPT_COPYWRITER=

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

# Environment
ENVIRONMENT=development

# Model Configuration
# -------------------
# AI model selection is centralized in config/vision_models.yaml
# See the 'task_assignments' section for model-to-task mappings
# Edit that file to change which models are used for each task

# Feature flags
USE_MOCK_DATA=false
ENABLE_AI_CONTENT_GENERATION=true
ENABLE_AI_IMAGE_GENERATION=true
